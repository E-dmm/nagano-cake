<div class='container px-5 px-sm-0'>
  <div class='row'>
    <h2>注文履歴一覧</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= @order_day %></td>
          <td>
            <%= link_to admin_order_path(order) do %>
            　<%= order.address_name %>
            <% end %>
          </td>
          <td><%#= @order_product.quantity %></td>
          <td><%= order.order_status %></td>
        </tr>
          <%= paginate @orders %>
        <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>
  </div>
</div>
