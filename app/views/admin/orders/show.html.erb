<main>
<h2>注文履歴詳細</h2>
  <table>
    <tbody>
      <tr>
        <th>購入者</th>
        <td><%= @order.address_name %></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order_day %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          <%= @order.address %>
          <%= @customer.last_name %>
          <%= @customer.last_name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <th>銀行振込</th>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
          <%= form_with model: @order, url: admin_order_path,local: true do |f| %>
           <%= f.select :order_status, Order.order_statuses.keys, class: "order_status-select" %>
           <%= f.submit "更新" , class: "btn-sm btn-success" %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>制作ステータス</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @ordered_products %></td>
        <td><%#= @ordered_product.price %></td>
        <td><%#= @ordered_product.quantity %></td>
        <td><%#= @ordered_product.sum_of_price %></td>
        <td>
        <%= form_with model: @order, url: admin_order_path,local: true do |f| %>
          <%= f.select :production_status, OrderedProduct.production_statuses.keys, class: "production_status-select" %>
          <%= f.submit "更新", class: "btn-sm btn-success" %>
        <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</main>