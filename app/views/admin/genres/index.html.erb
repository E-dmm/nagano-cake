<div class="container">

  <div class='row'>
    <div class="col-md-3">
      <h3 class="bg-light">ジャンル一覧・追加</h3>
    </div>
  </div>

    <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
  <div class="row">
    <div class="col-md-4">
      <%= f.label :　　　　　　　　　　　　　　　　ジャンル名 %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :name, class: 'form-control', include_blank: "ジャンル名" %>
    </div>
    <div class="col-md-4">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
  </div>
    <% end %>

  <div class="row">&nbsp;</div>

  <div class="row">
    <table class='table table-bordered'>
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-sm btn-success' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
