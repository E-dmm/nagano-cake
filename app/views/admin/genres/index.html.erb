<div class='row'>
<h2>ジャンル一覧・追加</h2>
  <div class="form_group">
  <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
    <%= f.label :ジャンル %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.submit class: 'btn btn-success' %>
  <% end %>
  </div>
<table class='table'>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-sm btn-success' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
