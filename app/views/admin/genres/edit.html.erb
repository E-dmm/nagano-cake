<div class="container">

  <div class='row'>
    <div class="col-md-3">
      <h3 class="bg-light">　&nbsp;ジャンル編集</h2>
    </div>
  </div>


  <%= form_with model:@genre, url: admin_genre_path, local:true do |f| %>
  <div class="row mt-md-5">
    <div class="col-md-4">
      <%= f.label :　　　　　　　　　　　　　　　　　ジャンル %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="col-md-4">
      <%= f.submit "変更を保存", class: 'btn btn-sm btn-success' %>
    </div>
  </div>
  <% end %>

</div>