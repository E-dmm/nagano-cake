<div class='row'>
  <h2>ジャンル編集</h2>
  <div class='form-group'>
    <%= form_with model:@genre, url: admin_genre_path, local:true do |f| %>
      <%= f.label :ジャンル %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.submit "変更を保存", class: 'btn btn-sm btn-success' %>
    <% end %>
  </div>
</div>