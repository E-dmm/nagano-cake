<div>
    <div class="col-3"></div>
    <div class="col-7">
        <h2 class="ml-5">管理者ログイン</h2>
        <%= form_with model: @admin, url: admin_session_path,local: true do |f| %>
        <div class="justify-content-center row">
          <div class="m-3">
            <div class="row ">
              <div class=" text-center mr-3"><%= f.label :email, 'メールアドレス' %></div>
              <div class=" text-center"><%= f.email_field :email, autocomplete: "email", :size=>"60", class: "textlines" %></div>
            </div>
          </div>
        
          <div class="field text-center">
            <div class="row justify-content-center">
              <div class="mr-5"><%= f.label :password,'パスワード' %></div>
              <%= f.password_field :password, autocomplete: "current-password", :size=>"60", class: "textlines" %>
            </div>
          </div>
        </div>
        
          <div class="text-center mt-3">
            <%= f.submit "Log in", class: "btn btn-primary" %>
          </div>
        <% end %>
        </div>
    <div class="col-2"></div>
</div>

