<h2 class="ml-5">管理者ログイン</h2>

<%#= form_for(resource, as: resource_name, url: admins_sign_in_path(resource_name)) do |f| %>
<%= form_with model: @admin, url: admin_session_path,local: true do |f| %>
<div class="text-start">
  <div class="field text-center m-3">
    <div class="row justify-content-center">
      <div class="mr-3"><%= f.label :email, 'メールアドレス' %></div>
      <div><%= f.email_field :email, autocomplete: "email", :size=>"57" %></div>
    </div>
  </div>

  <div class="field text-center">
    <div class="row justify-content-center">
      <div class="mr-5"><%= f.label :password,'パスワード' %></div>
      <%= f.password_field :password, autocomplete: "current-password", :size=>"60" %>
    </div>
  </div>
</div>
  <%# if devise_mapping.rememberable? %>
    <!--<div class="field">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <!--</div>-->
  <%# end %>

  <div class="actions text-center mt-3">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

