<div class="row">
  <h2>商品詳細</h2>
  <%#= attchment_image_tag @product %>
  <table class="table">
    <tbody>
      <tr>
        <td>商品名</td>
        <td><%= @product.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @product.text %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @product.genre.name %></td>
      </tr>
      <tr>
        <td>税込価格(税抜価格)</td>
        <td><%= @product.price*1.1 %>(<%= @product.price %>)円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
          <% if @product.is_active == true %>
            販売中
          <% else %>
            販売停止中
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= link_to '編集する', edit_admin_product_path(@product), class: 'btn btn-sm btn-success' %>
</div>