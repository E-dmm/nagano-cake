<div class="row">
  <h2>商品新規登録</h2>
  <%= form_with model:@product, url: admin_products_path, local:true do |f| %>
    <table class="table">
      <tbody>
        <tr>
          <td><%= f.label :商品画像 %></td>
          <td><%= f.attachment_field :image_id, class: 'form-control-file' %></td>
        </tr>
        <tr>
          <td><%= f.label :商品名 %></td>
          <td><%= f.text_field :name, class: 'form-control' %></td>
        </tr>
        <tr>
          <td><%= f.label :商品説明 %></td>
          <td><%= f.text_area :text, class: 'form-control' %></td>
        </tr>
        <tr>
          <td><%= f.label :ジャンル %></td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
        </tr>
        <tr>
          <td><%= f.label :税抜価格 %></td>
          <td><%= f.text_field :price, class: 'form-control' %></td>
        </tr>
        <tr>
          <td><%= f.label :販売ステータス %></td>
          <td><%= f.select :is_active, [["販売中", true], ["販売停止中", false]] %></td>
        </tr>
      </tbody>
    </table>
    <%= f.submit '新規登録', class: 'btn btn-sm btn-success' %>
  <% end %>
</div>