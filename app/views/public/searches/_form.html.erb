<div class="d-flex justify-content-end" id = "search_space">
  <% if customer_signed_in? %>
    <%= form_with url:search_path, method: :get, local: true do |f| %>
      <%= f.text_field :content %>
      <%= f.select :model, options_for_select({ "Product" => "product", "Genre" => "genre" }) %>
      <%#= f.select :method, options_for_select({ "完全一致" => "perfect", "部分一致" => "partial" }) %>
      <%= f.submit :"Search", class: "btn-sm btn-outline-secondary fas fa-search-plus" %>
    <% end %>
<% end %>
</div>
