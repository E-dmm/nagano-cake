<div>マイページ</div>
<div class="container mb-3">
     <div class="row">
         <div class="mr-4">登録情報</div>
         <div><%= link_to "編集する",edit_customer_path(current_customer), class: 'btn btn-success' %> </div>
     </div>
</div>

<table table width="900" height="150">
    <tr>
        <th width="200">氏名</th>
        <td width="700"><%= @customer.last_name %> <%= @customer.first_name %> </td>
    </tr>
    <tr>
        <th>カナ</th>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
        <th>郵便番号</th>
        <td><%= @customer.postcode %></td>
    </tr>
    <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
    </tr>
    <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
    </tr>
</table>

<div>配送先　<%= link_to "一覧を見る",delivery_addresses_path, class: 'btn btn-primary' %> </div>
<div>注文履歴　<%= link_to "一覧を見る", orders_path, class: 'btn btn-primary' %> </div>