<div class="container">
	<div class="row">
		<h3>ショッピングカート</h3>
			<% if @cart_products.present? == true %>
				<%= link_to 'カートを空にする',  all_destroy_path, method: :delete, class: 'btn btn-sm btn-danger' %>
			<% end %>
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価(税込)</th>
						<th>数量</th>
						<th>小計</th>
						<th></th>
					</tr>
				</thead>
        <tbody>
          <% @cart_products.each do |cart_product| %>
          <tr>
            <td><%= attachment_image_tag cart_product.product, :image, :fill, 100, 100 %><%= cart_product.product.name %></td>
            <td><%= cart_product.product.price %></td>
            <td>
              <%= form_with model: cart_product, url: cart_product_path(cart_product), method: :patch do |f| %>
                <%= f.select :quantity, options_for_select((1..10).to_a) %>
                <%= f.submit "変更", class: 'btn btn-sm btn-success' %>
              <% end %>
            </td>
            <td><%= cart_product.product.price * cart_product.quantity %></td>
            <td><%= link_to '削除する', cart_product_path(cart_product), method: :delete, class: 'btn btn_sm btn-danger' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
			<%= link_to '買い物を続ける', root_path, class: 'btn btn-sm btn-primary' %>
      <table class="table table-bordered">
        <tr>
          <th>合計金額</th>
          <td><%= @total_price.floor.to_s(:delimited, delimiter: ',') %></td>
        </tr>
      </table>
		　<%= link_to '情報入力へ進む', new_order_path, class: 'btn btn-lg btn-success' %>
	</div>
</div>