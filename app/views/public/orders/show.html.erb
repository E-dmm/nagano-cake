<div class = "table_width">
  <table class="table table-bordered">
    <h4>注文情報</h4>
    <tbody>
      <tr>
        <th>注文日</th>
        <td><%= @order_day %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          <%= @order.address %>
          <%= @customer.last_name %>
          <%= @customer.last_name %>
        </td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td>銀行振込</td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.order_status %></td>
      </tr>
    </tbody>
  </table>

  <table class="table table-bordered">
    <h4>請求情報</h4>
    <tbody>
      <tr>
        <th>商品合計</th>
       <td><%= @order.total_price %></td>  <!--ここちょっと不明-->
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.shipping %></td>
      </tr>
      <tr>
        <th><strong>ご請求額</strong></th>
        <td> <%= @order.sum_of_order_price %></td> <!--ここも自信はない-->
      </tr>
    </tbody>
  </table>

  <table class="table table-bordered">
    <h4>注文内容</h4>
    <thead>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @ordered_products %></td>
        <td><%#= @ordered_products.price %></td>
        <td><%#= @ordered_products.quantity %></td>
        <td><%#= sum_of_price %></td>
  </table>
</div>