<div class="row">
  <h3>注文情報確認</h3>
  <table class="table table-hover table-inverse table-bordered">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% current_customer.cart_products.each do |cart_product| %>
        <tr>
          <td>
            <%= attachment_image_tag( cart_product.product, :image, size: "60x50", fallback: "no_image.jpg") %>
            <%= cart_product.product.name %>
          </td>
          <td>
            <%= cart_product.product.add_tax_price.to_s(:delimited, delimiter: ',') %>
          </td>
          <td>
            <%= cart_product.quantity %>
          </td>
          <td>
            <%= (cart_product.product.price*1.1)*(cart_product.quantity) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <table class="table table-hover table-sm table-bordered">
    <tr>
      <th>送料</th>
      <td>800</td>
    </tr>
    <tr>
      <th>商品合計</th>
      <td><%= @total_price %></td>
    </tr>
    <tr>
      <th>請求金額</th>
      <td><%= (@total_price + 800) %></td>
    </tr>
  </table>
  <table class="table table-hover table-condensed table-bordered">
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment %></td>
    </tr>
    <tr>
      <td>お届け先</td>
      <td>
        <%= @order.postcode %>
        <%= @order.address %>
        <%= @order.name %>
      </td>
    </tr>
  </table>
  <%= link_to "注文を確定する", orders_thanks_path, class: 'btn btn-sm btn-success' %>
</div>