<div class="container">

  <div class="row">
  	<div class="col-md-3">
    	<h3 class="bg-light">　&nbsp;&nbsp;注文情報入力</h2>
    </div>
  </div>

    <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
  <div class="row">
  	<div class="col-md-3">
  		<h4>支払方法</h4>
  	</div>
  </div>

  <div class="row">
  	<div class="col-md-8">
      <%= f.radio_button :payment, "クレジットカード", checked: "checked" %>
	  	<%= f.label :クレジットカード %><br>
	  	<%= f.radio_button :payment, "銀行振込" %>
	  	<%= f.label :銀行振込 %>
	  </div>
	</div>

	<div class="row">
		<div class="col-md-3">
			<h4>お届け先</h4>
		</div>
	</div>

	<div class="row">
    <div class="col-md-8">
      <%= f.radio_button :a_method, 0, checked: "checked" %>
			<%= f.label :ご自身の住所 %><br>
				〒<%= current_customer.postcode %>&nbsp;<%= current_customer.address %><br>
			  <%= current_customer.last_name %>&nbsp;<%= current_customer.first_name %><br>
	    <%= f.radio_button :a_method, 1 %>
				<div class="form-group">
				<%= f.label :登録済住所から選択 %><br>
				  <%= f.collection_select :delivery_address_id, DeliveryAddress.all, :id, :name, class: "form-control-static" %><br>
				</div>
      <%= f.radio_button :a_method, 2 %>
				<%= f.label :新しいお届け先 %>
        <div class="form-group">
				<%= f.label :"郵便番号(ハイフンなし)" %>&nbsp;<%= f.text_field :postcode %>
			  </div>
			  <div class="form-group">
				<%= f.label :"住所", class: "control-label" %>　　　　　　　　　<%= f.text_field :address, class: "form-control-static" %>
			  </div>
			  <div class="form-group">
				<%= f.label :"宛名", class: "control-label" %>　　　　　　　　　<%= f.text_field :address_name, class: "form-control-static" %>
			  </div>
      <%= f.submit "確認画面へ進む", class: 'btn btn-sm btn-success' %>
		<% end %>
	  </div>
	</div>

</div>