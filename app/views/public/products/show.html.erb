
<div class="row">
    <div class="col-md-3">
        <table class="table table-bordered ml-3">
            <thead>
                <th>ジャンル検索</th>
            </thead>
            <tbody>
                <% @genres.each do |genre| %>
                      <th><%= genre.name %></th>
                <% end %>
            </tbody>
        </table>
    </div>
    <div class="col-md-8">
    　<%= attachment_image_tag @product, :image, size: "340x220" %>
    　<%= @product.name %>
    　<%= @product.text %>
    　<%= @product.add_tax_price %><small>（税込）</small>
    　<%= form_with model: @cart_products, url: cart_product_path, local:true do |f| %>
        　<%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
        　<%= f.submit "カートに入れる", class: " btn btn-primary" %>
        <% end %>
    </div>

</div>