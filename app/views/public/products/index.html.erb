
<div class="container">
    <div class="row">
        <div class="col-md-2">
            <table class="table table-bordered ml-3">
                <thead>
                    <th>ジャンル一覧</th>
                </thead>
                <tbody>
                    <% @genres.each do |genre| %>
                    　　<tr>
                          <th><%= link_to genre.name, search_path(content: genre.name, model: 'genre') %></th>
                          <%#= link_to book.category, search_path(value: book.category, model: 'book') %>
                         </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="col-10">
            <h2>商品一覧（全<%= @products.total_count %>件）</h2>
            <div id="container">
        　　　<% @products.each do |product| %>
        　　　<div class="item">
            　　　   <div class="img-area">
            　　　     <%= link_to product_path(product.id) do %>
                     <%= attachment_image_tag product, :image, size: "250", class: "index-img" %>
                    <% end %>
                  </div>
                  <div>
                     <%= product.name %>
                  </div>
                  <div>
                     ¥<%= product.price %>
                  </div>
                </div>
        　　　<% end %>
        　　</div>
        　　<div class="float-right">
        　　 <%= paginate @products %>
        　　</div>
        </div>
    </div>
</div>