

<div class="row">
    <div class="col-md-3">
        <table class="table table-bordered ml-3">
            <thead>
                <th>ジャンル検索</th>
            </thead>
            <tbody>
                <% @genres.each do |genre| %>
                      <th><%= genre.name %></th>
                <% end %>
            </tbody>
        </table>
    </div>
    <div class="col-md-8">
        
        <h2>商品一覧（全<%= @products.count %>件）</h2>
    　　　<% @products.each do |product| %>
    　　　<div>
    　　　     <%= link_to product_path(product.id) do %>
             <%= attachment_image_tag product, :image, size: "340x220" %>
            <% end %>
             <%= product.name %>
             <%= product.price %>
    　　　</div>
    　　　<% end %>
        
    </div>

    <%= paginate @products %>

</div>