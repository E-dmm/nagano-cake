<div class="container">
  <div class="row">
    <%= render 'sidebar', genres: @genres %>
    <h2>商品一覧(全<%= @products.count %>件)</h2>
    <% @products.each do |product| %>
      <%= link_to public_product_path(product) do %>
        <%#= attachment_image_tag product, :image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg" %>
        <%= product.name %>
        ¥<%= product.price.to_s(:delimited, delimiter: ',') %>
      <% end %>
    <% end %>
    <%= paginate @products %>
  </div>
</div>