<table class="table table-bordered">
     <div>登録情報<%= link_to "編集する" %> </div>
    <tr>
        <th>氏名</th>
        <th><%= @customer.last_name %> <%= @customer.first_name %> </th>
    </tr>
    <tr>
        <td>カナ</td>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
        <td>郵便番号</td>
        <td><%= @customer.postcode %></td>
    </tr>
    <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
    </tr>
    <tr>
        <td>電話番号</td>
        <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
    </tr>
</table>

<div>配送先　<%= link_to "一覧を見る", class: 'btn btn-primary' %> </div>
