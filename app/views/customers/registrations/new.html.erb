<div class="col-md-10 offset-md-1">
    <h2>新規会員登録</h2>
    <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
    <%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
    
    
    　<div class="field">
        <%= f.label :last_name, "(姓)" %><br />
        <%= f.text_field :last_name, autofocus: true %>
      </div>
      
      <div class="field">
        <%= f.label :first_name, "（名）" %><br />
        <%= f.text_field :first_name, autofocus: true %>
      </div>
      
      <div class="field">
        <%= f.label :last_name_kana, "(セイ)" %><br />
        <%= f.text_field :last_name_kana, autofocus: true %>
      </div>
      
      <div class="field">
        <%= f.label :first_name_kana, "(メイ)" %><br />
        <%= f.text_field :first_name_kana, autofocus: true %>
      </div>
    
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      
      <div class="field">
        <%= f.label :postcode, "郵便番号（ハイフンなし）" %><br />
        <%= f.text_field :postcode, autofocus: true %>
      </div>
      
      <div class="field">
        <%= f.label :address, "住所" %><br />
        <%= f.text_field :address, autofocus: true %>
      </div>
      
      <div class="field">
        <%= f.label :phone_number,"電話番号（ハイフンなし）" %><br />
        <%= f.text_field :phone_number, autofocus: true %>
      </div>
    
      <div class="field">
        <%= f.label :password, "パスワード（6文字以上）" %>
        <% if @minimum_password_length %>
        <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-success' %>
      </div>
    <% end %>
    <div>すでに登録済みの方</div>
    <div>
      <%= link_to "こちら", new_customer_session_path %>からログインしてください
    </div>
</div>
<%#= render "customers/shared/links" %>
